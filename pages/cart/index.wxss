page {
  padding-bottom: 90rpx;
}
.receive .address_btn {
  padding: 15rpx 0;
}
.receive .address_btn button {
  width: 60%;
}
.receive .address {
  display: flex;
  padding: 20rpx;
}
.receive .address .user_info {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: start;
  flex-wrap: nowrap;
}
.receive .address .user_phone {
  flex: 3;
  display: flex;
  justify-content: flex-end;
}
/*商品列表*/
.cart_list .cart_title {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
  padding: 20rpx;
}
.cart_list .cart_container .cart_item {
  display: flex;
  flex-direction: row;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #cccccc;
}
.cart_list .cart_container .cart_item .check {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cart_list .cart_container .cart_item .img {
  flex: 2;
}
.cart_list .cart_container .cart_item .img image {
  width: 80%;
}
.cart_list .cart_container .cart_item .goods_info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_list .cart_container .cart_item .goods_info .goods_intro {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart_list .cart_container .cart_item .goods_info .info_wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.cart_list .cart_container .cart_item .goods_info .info_wrap .price {
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
}
.cart_list .cart_container .cart_item .goods_info .info_wrap .count {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  text-align: center;
}
.cart_list .cart_container .cart_item .goods_info .info_wrap .count .sub {
  border: 1rpx solid #ccc;
  padding: 0 10rpx;
}
.cart_list .cart_container .cart_item .goods_info .info_wrap .count .num {
  padding: 0 10rpx;
}
.cart_list .cart_container .cart_item .goods_info .info_wrap .count .add {
  border: 1rpx solid #ccc;
  padding: 0 10rpx;
}
.cart_list .empty {
  color: var(--themeColor);
  font-size: 40rpx;
  text-align: center;
  padding-top: 20rpx;
  font-weight: 800;
}
/*底部工具栏*/
.btm_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  height: 90rpx;
  width: 100%;
  border-top: 1rpx solid #ccc;
}
.btm_tool .checkgroup {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 2;
}
.btm_tool .count {
  text-align: right;
  flex: 5;
  padding-right: 15rpx;
}
.btm_tool .count .price {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.btm_tool .pay {
  flex: 2;
  display: flex;
  justify-content: center;
  background-color: var(--themeColor);
  color: #ffffff;
  align-items: center;
}
