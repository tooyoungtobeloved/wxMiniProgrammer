.collect_main .collect_nav {
  background-color: #eee;
  display: flex;
  padding: 20rpx;
}
.collect_main .collect_nav view {
  padding: 10rpx 20rpx;
  border: 2rpx solid #ccc;
  background-color: #fff;
  margin-right: 20rpx;
}
.collect_main .collect_nav .all {
  color: var(--themeColor);
  border: 2rpx solid currentColor;
}
.collect_main .collect_content .collect_item {
  display: flex;
  border-bottom: 2rpx solid #ccc;
  padding-left: 20rpx;
}
.collect_main .collect_content .collect_item .item_img {
  flex: 2;
}
.collect_main .collect_content .collect_item .item_img image {
  width: 80%;
}
.collect_main .collect_content .collect_item .item_info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect_main .collect_content .collect_item .item_info .desc {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.collect_main .collect_content .collect_item .item_info .price {
  color: var(--themeColor);
  font-size: 32rpx;
}
