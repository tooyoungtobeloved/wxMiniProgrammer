.container .goods_item {
  display: flex;
  border-bottom: 2rpx solid #cccccc;
}
.container .goods_item .image_container {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container .goods_item .image_container image {
  width: 70%;
}
.container .goods_item .info_container {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.container .goods_item .info_container .goods_info {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.container .goods_item .info_container .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
